3.SORU

#include <stdio.h>

int main() {
    int a,b,c;
    printf("lütfen 3 sayi girin:");
    scanf("%d,%d,%d",&a,&b,&c);
    
    if((a>b)&&(a>c)){
        printf("en büyük sayi=%d\n",a);
    }
    else if((b>a)&&(b>c)){
        printf("en büyük sayi=%d\n",b);
    }
    else if ((c>=a)&&(c>=b)){
        printf("en büyük sayi=%d\n",c);
    }
    if ((a==b)||(a==c)||(b==c)){
        printf("en az iki sayiyi esit gidiniz");
    }
    return 0;
}
